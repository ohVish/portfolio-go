  <script>
    $(document).ready(function(){
      $('.card').mouseenter(function(){
        $(".card").not(this).animate({opacity:0.5},10);
      });
      $('.card').mouseleave(function(){
        $(".card").not(this).animate({opacity:1},10);
      });
      $('.carousel-caption').mouseenter(function(){
        $(".carousel-img").animate({opacity:0.5},10);
      });
      $('.carousel-caption').mouseleave(function(){
        $(".carousel-img").animate({opacity:1},10);
      });
    });
  </script>
